#!/bin/bash

SAVEFILE=/users/PZS0720/tdalesandro/prsnlsp/config/.aliases
handleFlag() {
        if [ "$1" == '-print' ]; then
                echo -----$SAVEFILE-----
                cat $SAVEFILE
		return
        fi
        if [ "$1" == '-clear' ]; then
                cp /dev/null $SAVEFILE
		echo cleared $SAVEFILE
		return
        fi
        if [ "$1" == '-edit' ]; then
                vim $SAVEFILE
		return
        fi
	echo unknown flag
}

main() {
	if [[ "$1" == "-"* ]]; then
		handleFlag "$@"
		return
	fi

		
	if [ "$1" ]; then
		alias "$1"
		INP=$(echo "$1" | sed -e "s@=@=\"@")
		INP=$INP\"
		echo alias "$INP" >> $SAVEFILE
		unset INP
	else
		echo need alias text.
	fi
}
main "$@"
unset SAVEFILE
